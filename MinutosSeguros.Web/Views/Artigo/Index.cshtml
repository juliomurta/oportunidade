@model IEnumerable<MinutoSeguro.DataTransferObject.AnaliseArtigo>
<div class="col-lg-12">
    <h1>Analisador de palavras</h1>

    @{
        int contador = 1;

        foreach (var analiseArtigo in Model)
        {
            <h3>
                @contador - @analiseArtigo.Artigo.Titulo
            </h3>
            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th>Palavra</th>
                        <th>Total de aparecimentos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var palavra in analiseArtigo.Palavras)
                    {
                        <tr>
                            <td>
                                @palavra.Descricao
                            </td>
                            <td>
                                @palavra.QuantidadeDeVezesQueAparece
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <label>Total de Palavras: @analiseArtigo.TotalPalavras</label>
            </div>

            contador++;
        }
    }
</div>
